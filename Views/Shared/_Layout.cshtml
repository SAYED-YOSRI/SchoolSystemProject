@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap & Your Styles -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/site-theme.css" />

    <style>
        body {
            background-image: url('/images/library-background.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            position: relative;
            z-index: 0;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(255, 255, 255, 0.85);
                z-index: -1;
            }

        .sidebar {
            background-color: rgba(255, 255, 255, 0.95);
            min-height: 100vh;
            border-right: 1px solid #ddd;
            padding-top: 20px;
            box-shadow: 3px 0px 15px rgba(0, 0, 0, 0.1);
        }

            .sidebar .nav-link {
                color: #007bff;
                font-weight: 500;
                transition: all 0.3s ease-in-out;
            }

                .sidebar .nav-link:hover {
                    background-color: #f1f1f1;
                    border-radius: 5px;
                    color: #0056b3;
                }

                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: #007bff;
                }

        main {
            padding: 30px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            margin-top: 30px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        h1.h2 {
            font-weight: 700;
            color: #007bff;
        }

        .navbar {
            background-color: #0069d9;
            color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
        }

        .navbar a {
            color: white;
            transition: color 0.3s ease-in-out;
        }

            .navbar a:hover {
                color: #ddd;
            }
    </style>
</head>
<body>

    @if (SignInManager.IsSignedIn(User))
    {
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">📚 Admin Dashboard</a>
                <span class="text-white ms-auto me-4">Welcome, @User.Identity.Name</span>
            </div>
        </nav>
    }

    <div class="container-fluid" style="margin-top: 70px;">
        <div class="row">
            @if (SignInManager.IsSignedIn(User))
            {
                <!-- Sidebar -->
                <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                    <div class="position-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ShowTimetable" asp-controller="Admin">📆 Show Timetable</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ShowAllCourses" asp-controller="Admin">📘 Show Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ShowAllStudents" asp-controller="Admin">👨‍🎓 Show Students</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ShowAllTeachers" asp-controller="Admin">👩‍🏫 Show Teachers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="ShowExamTimetable" asp-controller="Admin">📝 Show Exam Timetable</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            }

            <!-- Main Content -->
            <main class="@(SignInManager.IsSignedIn(User) ? "col-md-9 ms-sm-auto col-lg-10 px-md-4" : "col-12")">
                <div class="pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
