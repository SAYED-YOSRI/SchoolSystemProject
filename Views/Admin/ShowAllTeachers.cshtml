@model List<Teacher>
@{
    ViewData["Title"] = "Show All Teachers";
}


<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Courses Teached</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.password</td>
                <td>@item.phoneNumber</td>
                <td>@item.addres</td>
                <td>
                    @if (item.Courses != null && item.Courses.Any())
                    {
                        <span>@item.Courses.Count()</span>
                        <a asp-controller="Admin" asp-action="ShowTeacherCourses" asp-route-id="@item.Id" class="btn btn-info btn-sm ms-2">View</a>
                    }
                    else
                    {
                        <span>No Courses</span>
                    }
                </td>
                <td>
                    <form asp-action="DeleteTeacher" asp-controller="Admin" asp-route-Id="@item.Id" method="post" onsubmit="return confirm('Are you sure?');" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <a asp-action="EditTeacher" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/creatTeacher" class="btn btn-success">Add Teacher</a>
