@model Student

@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form method="post" asp-action="EditStudent" asp-controller="Admin">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div>
        <label>Password</label>
        <input asp-for="password" type="password" class="form-control" required />
    </div>

    <div>
        <label>Address</label>
        <input asp-for="addres" class="form-control" required />
    </div>

    <div>
        <label>Phone Number</label>
        <input asp-for="phoneNumber" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-action="ShowAllStudents" class="btn btn-secondary mt-2">Cancel</a>
</form>

<script>
    document.querySelector('form').addEventListener('submit', function (e) {
        const name = document.getElementById('FullName').value;
        const nameRegex = /^[\p{L}\s]+$/u;

        if (!nameRegex.test(name)) {
            e.preventDefault();
            alert("⚠ The name must contain only letters, no numbers.  .");
        }
    });
</script>