@model List<Course>
@{
    ViewData["Title"] = "Show All Courses";
}

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Course Id</th>
            <th>Course Title</th>
            <th>Teacher Name</th>
            <th>Department Name</th>
            <th>Enrollments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseId</td>
                <td>@item.Title</td>
                <td>@item.Teacher?.FullName</td>
                <td>@item.Department?.Name</td>
                <td>
                    @if (item.Enrollments != null && item.Enrollments.Any())
                    {
                        <span>@item.Enrollments.Count() student(s)</span>
                        <a asp-controller="Admin" asp-action="ViewEnrolledStudents" asp-route-courseId="@item.CourseId" class="btn btn-info btn-sm ms-2">Show Enrollments</a>
                    }
                    else
                    {
                        <span>No Enrollments Yet</span>
                    }
                </td>
                <td>
                    <form asp-action="DeleteCourse" asp-controller="Admin" asp-route-id="@item.CourseId" method="post" onsubmit="return confirm('Are you sure?');" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/createCourse" class="btn btn-success">Add Course</a>
