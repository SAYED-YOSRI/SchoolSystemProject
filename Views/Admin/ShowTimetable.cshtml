@using final_project.ViewModels
@model IEnumerable<TimetableViewModel>
@{
    ViewData["Title"] = "Unified School Timetable";
    var days = Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>();
}

@* <h2 class="page-title">School Timetable</h2> *@

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Course</th>
            <th>Teacher</th>
            @foreach (var day in days)
            {
                <th class="text-center">@day</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseTitle</td>
                <td>@course.TeacherName</td>
                @foreach (var day in days)
                {
                    <td class="text-center">
                        @if (course.Schedule.ContainsKey(day))
                        {
                            for (int i = 0; i < course.Schedule[day].Count; i++)
                            {
                                var session = course.Schedule[day][i];
                                var id = course.EntryIds[day][i];
                                <div>
                                    <span class="session-text">@session</span> |
                                    <a asp-action="EditTimetable" asp-route-id="@id" class="btn btn-sm btn-warning ml-1">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-sm btn-danger ml-1">Delete</button>
                                    </form>
                                </div>
                            }
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
