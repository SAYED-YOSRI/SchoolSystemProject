@model Timetable
@{
    ViewData["Title"] = "Delete Timetable";
}

<h2>Are you sure you want to delete this entry?</h2>

<div>
    <p><strong>Course:</strong> @Model.Course.Title</p>
    <p><strong>Teacher:</strong> @Model.Teacher.FullName</p>
    <p><strong>Day:</strong> @Model.Day</p>
    <p><strong>Time:</strong> @Model.StartTime - @Model.EndTime</p>
    <p><strong>Location:</strong> @Model.Location</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ShowTimetable" class="btn btn-secondary">Cancel</a>
</form>