
@{
    ViewData["Title"] = "Exam Timetable";
}



<a asp-action="CreateExam" class="btn btn-success mb-3">Create New Exam</a>

<table class="table table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Day</th>
            <th>Course</th>
            <th>Exam Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            var exams = group.Exams;
            var rowspan = exams.Count;

            for (int i = 0; i < rowspan; i++)
            {
                <tr>
                    @if (i == 0)
                    {
                        <td rowspan="@rowspan" class="align-middle fw-bold">@group.Day</td>
                    }
                    <td>@exams[i].CourseTitle</td>
                    <td>@exams[i].ExamDate.ToString("dd/MM/yyyy")</td>
                    <td>@exams[i].Location</td>
                    <td>
                        <a asp-action="EditExam" asp-route-id="@exams[i].ExamId" class="btn btn-primary btn-sm">Edit</a>
                        <form asp-action="DeleteExam" asp-route-id="@exams[i].ExamId" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this exam?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
