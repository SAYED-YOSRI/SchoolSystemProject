@model Timetable
@{
    ViewData["Title"] = "Edit Timetable";
}

<h2>Edit Timetable</h2>

<form asp-action="EditTimetable" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Teacher</label>
        <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Day</label>
        <select asp-for="Day" class="form-control">
            @foreach (var day in Enum.GetValues(typeof(DayOfWeek)))
            {
                <option value="@day" selected="@(day.Equals(Model.Day) ? "selected" : null)">@day</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Start Time</label>
        <input asp-for="StartTime" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label>End Time</label>
        <input asp-for="EndTime" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label>Location</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ShowTimetable" class="btn btn-secondary">Cancel</a>
</form>
