@model Exam
@{
    ViewData["Title"] = "Exam";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditExam" method="post">
    <input type="hidden" asp-for="ExamId" />
    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ExamDate"></label>
        <input asp-for="ExamDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

